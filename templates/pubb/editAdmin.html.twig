{% extends 'baseAdmin.html.twig' %}

{% block title %}Edit Publication{% endblock %}

{% block body %}

 {{ form_start(form) }}
	<div>
		<div class="col-lg-12">
			<div>
				<div class="card-body p-4">
					<div>
						<div style="display: flex;justify-content:center;margin-top:120px;">
							<div class="mt-4 mt-lg-0">
								<h5 class="font-size-14 mb-4">
									<i class="mdi mdi-arrow-right text-primary me-1"></i>
									ADD NEW ANNONCE</h5> {{form_start(form)}}
								<div class="row mb-4">
									<label for="horizontal-firstname-input" class="col-sm-3 col-form-label">Topic</label>
									<div class="col-sm-9"> {{form_widget(form.topic,{'attr':{'class':'form-control'}})}}
									</div>
								</div>
								<div class="row mb-4">
									<label for="horizontal-firstname-input" class="col-sm-3 col-form-label">ID USER</label>
									<div class="col-sm-9"> {{form_widget(form.idU,{'attr':{'class':'form-control'}})}}
									</div>
								</div>
								<button class="btn btn-primary w-md">{{ button_label|default('Update') }}</button> 
								{{ form_end(form) }}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
