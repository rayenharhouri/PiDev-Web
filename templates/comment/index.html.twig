{% extends 'base.html.twig' %}

{% block title %}Commentaire index
{% endblock %}

{% block body %}
	<h1>Commentaire index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>IdPub</th>
				<th>IdU</th>
				<th>Comment</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for commentaire in commentaires %}
				<tr>
					<td>{{ commentaire.id }}</td>
					<td>{{ commentaire.idPub }}</td>
					<td>{{ commentaire.idU }}</td>
					<td>{{ commentaire.comment }}</td>
					<td>
						<a href="{{ path('app_comment_show', {'id': commentaire.id}) }}">show</a>
						<a href="{{ path('app_comment_edit', {'id': commentaire.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	{% for pub in publications %}
		<a href="{{ path('app_comment_new' ,  {'id': pub.idPub}) }}">Create new</a>
	{% endfor %}

{% endblock %}
