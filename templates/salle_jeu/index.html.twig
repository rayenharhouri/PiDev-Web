{% extends 'base_admin.html.twig' %}

{% block Content %}

                <main>
                    <div class="container-fluid px-4">
                        <h1 class="mt-4">SalleJeu</h1>

                        <div class="card mb-4">

                            <div class="card-body">
                                <table class="table">
                                    <thead>
                                        <tr>
                                                       <th>IdSallej</th>
                                                       <th>Nomsallej</th>
                                                       <th>IdTournementp</th>
                                                       <th>actions</th>
                                                   </tr>
                                    </thead>
                                    <tfoot>
                                         <tr>
                                                        <th>IdSallej</th>
                                                        <th>Nomsallej</th>
                                                        <th>IdTournementp</th>
                                                        <th>actions</th>
                                                    </tr>
                                    </tfoot>
                                    <tbody>

                                       {% for salle_jeu in salle_jeus %}
